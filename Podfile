use_frameworks!

def stylist_pods
  pod 'Yams'
  pod 'KZFileWatchers'
end

target 'Example' do
  platform :ios, '10.0'
  stylist_pods
end

target 'Stylist-iOS' do
  platform :ios, '10.0'
  stylist_pods
end

target 'Stylist-tvOS' do
  platform :tvos, '10.0'
  stylist_pods
end

target 'Stylist-iOS Tests' do
  platform :ios, '10.0'
  stylist_pods
end

target 'Stylist-tvOS Tests' do
  platform :tvos, '10.0'
  stylist_pods
end
